{% if wordforms_d %}
<div class="wordforms-list">
    {% for wordform in wordforms_d|sort(attribute='ordering') %}
        {{ load_svelte_component('MiniLemma', {
            'lemma': wordform.wordform,
            'partOfSpeech': wordform.part_of_speech,
            'translations': wordform.translations,
            'href': url_for('wordform_views.get_wordform_metadata', target_language_code=target_language_code, wordform=wordform.wordform)
        }, component_id='minilemma-component-' ~ loop.index) }}
    {% endfor %}
</div>
{% else %}
<p class="no-entries"><em>No words found in this source file</em></p>
{% endif %}

<style>
    .wordforms-list {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }
    .no-entries {
        color: #666;
        font-style: italic;
    }
</style>