{% extends "base.jinja" %}

{% block title %}
{{ lemma }} in {{ target_language_name }} (not found) - Hello Zenno
{% endblock %}

{% block breadcrumbs %}
    » <a href="{{ url_for(endpoint_for(languages_list_vw)) }}">Languages</a>
    » <a href="{{ url_for(endpoint_for(sourcedirs_for_language_vw), target_language_code=target_language_code) }}">{{ target_language_name }}</a>
    » <a href="{{ url_for(endpoint_for(lemmas_list_vw), target_language_code=target_language_code) }}">Lemmas</a>
    » {{ lemma }} (not found)
{% endblock breadcrumbs %}

{% block content %}
<div class="container">
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Invalid Lemma</h4>
        <p>The lemma "{{ lemma }}" was not found in {{ target_language_name }}.</p>
    </div>

    <div class="mt-4">
        <a href="{{ url_for(endpoint_for(search_landing_vw), target_language_code=target_language_code) }}" class="btn btn-primary">
            Search For Words
        </a>
    </div>
</div>
{% endblock %} 