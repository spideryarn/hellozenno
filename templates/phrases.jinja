{% extends "base.jinja" %}
{% from "base_svelte.jinja" import load_svelte_component %}
{% set vite_entries = ['miniphrase'] %}

{% block breadcrumbs %}
    » <a href="{{ url_for(endpoint_for(languages)) }}">Languages</a>
    » <a href="{{ url_for(endpoint_for(sourcedirs_for_language), target_language_code=target_language_code) }}">{{ target_language_code }}</a>
    » Phrases & Idioms
{% endblock breadcrumbs %}

{% block title %}
{{ target_language_name }} phrases and idioms - Hello Zenno
{% endblock title %}

{% block content %}
<div class="container">
    <h1>{{ target_language_name }} phrases and idioms <span class="count">({{ phrases|length }})</span></h1>
    
    <div class="sort-options">
        Sort by:
        <a href="{{ url_for(endpoint_for(phrases_list), target_language_code=target_language_code, sort='alpha') }}" 
           class="sort-link {% if current_sort == 'alpha' %}active{% endif %}">
            Alphabetical
        </a> |
        <a href="{{ url_for(endpoint_for(phrases_list), target_language_code=target_language_code, sort='date') }}"
           class="sort-link {% if current_sort == 'date' %}active{% endif %}">
            Recently Modified
        </a>
    </div>

    <ul class="phrases-list">
        {% for phrase in phrases %}
            <li class="phrase-item">
                <div id="phrases-list-component-{{ loop.index }}"></div>
                {{ load_svelte_component('MiniPhrase', {
                    'phrase': phrase.canonical_form,
                    'translations': phrase.translations if phrase.translations else null,
                    'href': url_for(endpoint_for(get_phrase_metadata), target_language_code=target_language_code, slug=phrase.slug),
                    'part_of_speech': phrase.part_of_speech if phrase.part_of_speech else null,
                    'notes': phrase.usage_notes if phrase.usage_notes else null
                }, component_id='phrases-list-component-' ~ loop.index) }}
            </li>
        {% else %}
            <li class="no-phrases">No phrases available</li>
        {% endfor %}
    </ul>
</div>

<style>
    .sort-options {
        margin: 1em 0;
    }
    .sort-link {
        text-decoration: none;
        padding: 0.3em 0.6em;
    }
    .sort-link.active {
        font-weight: bold;
        text-decoration: underline;
    }
    .phrase-item {
        margin: 0.8em 0;
    }
    .phrases-list {
        list-style-type: none;
        padding-left: 0;
    }
</style>
{% endblock %} 