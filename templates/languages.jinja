{% endblock breadcrumbs %}

{% block title %}
Hello Zenno - learn foreign words, with a magical AI dictionary
{% endblock %}

{% block meta_description %}
Learn vocabulary and phrases in any language.
{% endblock %}

{% block content %}
<div class="tw-container tw-max-w-7xl tw-mx-auto tw-px-4 tw-py-8">
    <h1 class="tw-text-4xl tw-font-normal tw-mb-12">Available Languages ({{ languages|length }})</h1>
    
    <div class="tw-grid tw-grid-cols-3 tw-gap-6">
        {% for language in languages %}
            <a href="{{ url_for('sourcedir_views.sourcedirs_for_language', target_language_code=language.code) }}" 
               class="tw-block tw-bg-white tw-rounded-lg tw-p-6 tw-shadow-sm hover:tw-shadow-md tw-transition-shadow tw-duration-200">
                <div class="tw-text-2xl tw-font-normal tw-text-gray-900 tw-mb-2">{{ language.name }}</div>
                <div class="tw-text-base tw-text-gray-500">{{ language.code }}</div>
            </a>
        {% else %}
            <div class="tw-col-span-full tw-text-center tw-text-gray-500 tw-py-8">
                No languages available
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %} 