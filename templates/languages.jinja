{% extends "base.jinja" %}

{% block breadcrumbs %}
    Â» Languages
{% endblock breadcrumbs %}

{% block title %}
Hello Zenno - learn foreign words, with a magical AI dictionary
{% endblock %}

{% block meta_description %}
Learn vocabulary and phrases in any language.
{% endblock %}

{% block content %}
<div class="container">
    <h1>Available Languages ({{ languages|length }})</h1>
    
    <ul class="languages-list">
        {% for language in languages %}
            <li>
                <a href="{{ url_for('sourcedir_views.sourcedirs_for_language_vw', target_language_code=language.code) }}">
                    {{ language.name }}
                    <span class="language-code">({{ language.code }})</span>
                </a>
            </li>
        {% else %}
            <li>No languages available</li>
        {% endfor %}
    </ul>
</div>

<style>
.languages-list {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
}

.languages-list li {
    margin: 0;
}

.languages-list a {
    padding: 1.5rem;
    font-size: 1.25rem;
    font-weight: 500;
    text-align: center;
}

.language-code {
    display: block;
    font-size: 0.9rem;
    color: #666;
    margin-top: 0.25rem;
}
</style>
{% endblock %} 