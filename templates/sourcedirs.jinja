{% extends "base.jinja" %}

{% block breadcrumbs %}
    » <a href="{{ url_for(endpoint_for(languages_vw)) }}">Languages</a>
    » {{ target_language_name }}
{% endblock breadcrumbs %}

{% block title %}
{{ target_language_name }} Learning Materials - Hello Zenno
{% endblock %}

<div class="nav-menu">
    <a href="{{ url_for(endpoint_for(wordforms_list_vw), target_language_code=target_language_code) }}">Wordforms</a>
    <a href="{{ url_for(endpoint_for(lemmas_list_vw), target_language_code=target_language_code) }}">Lemmas</a>
    <a href="{{ url_for(endpoint_for(phrases_list_vw), target_language_code=target_language_code) }}">Phrases</a>
</div>

{% block content %}
<h1>Source Directories for {{ target_language_name }}</h1>

<div class="dictionary-links">
    <a href="{{ url_for(endpoint_for(wordforms_list_vw), target_language_code=target_language_code) }}">
        Wordforms
    </a>
    <a href="{{ url_for(endpoint_for(lemmas_list_vw), target_language_code=target_language_code) }}">
        Dictionary entries (lemmas)
    </a>
    <a href="{{ url_for(endpoint_for(phrases_list_vw), target_language_code=target_language_code) }}">
        Phrases & idioms
    </a>
    <a href="{{ url_for(endpoint_for(sentences_list_vw), target_language_code=target_language_code) }}">
        Sentences
    </a>
    <a href="{{ url_for(endpoint_for(flashcard_landing_vw), target_language_code=target_language_code) }}">
        Practice with Flashcards
    </a>
</div>
<hr />

<div class="top-controls">
    <button id="newSourcedirBtn" class="button success-btn">New Source Directory</button>
    
    <div class="actions">
    </div>
</div>

<div class="sort-options">
    Sort by:
    <a href="{{ url_for(endpoint_for(sourcedirs_for_language_vw), target_language_code=target_language_code, sort='alpha') }}" 
       class="sort-link {% if current_sort == 'alpha' %}active{% endif %}">
        Alphabetical
    </a> |
    <a href="{{ url_for(endpoint_for(sourcedirs_for_language_vw), target_language_code=target_language_code, sort='date') }}"
       class="sort-link {% if current_sort == 'date' %}active{% endif %}">
        Recently Modified
    </a>
</div>

<ul class="source-dirs-list">
    {% for dir in sourcedirs %}
        <li>
            <a href="{{ url_for(endpoint_for(sourcefiles_for_sourcedir_vw), target_language_code=target_language_code, sourcedir_slug=dir.slug) }}">
                {{ dir.path }}
            </a>
            {% if dir.slug in empty_sourcedirs %}
                <button class="button delete-btn" onclick="confirmDelete('{{ dir.slug }}')">Delete</button>
            {% endif %}
        </li>
    {% else %}
        <li>No source directories available</li>
    {% endfor %}
</ul>

<style>
    .sort-options {
        margin: 1em 0;
    }
    .sort-link {
        text-decoration: none;
        padding: 0.3em 0.6em;
    }
    .sort-link.active {
        font-weight: bold;
        text-decoration: underline;
    }
    .new-sourcedir-btn {
        margin: 1em 0;
        padding: 0.5em 1em;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    .new-sourcedir-btn:hover {
        background-color: #45a049;
    }
    .stats {
        color: #666;
        font-size: 0.9em;
        margin-left: 1em;
    }
    .delete-btn {
        margin-left: 10px;
        padding: 3px 8px;
        background-color: #f44336;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 0.8em;
    }
    .delete-btn:hover {
        background-color: #d32f2f;
    }
    .top-controls {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin: 1em 0;
    }
    .actions {
        display: flex;
        justify-content: flex-end;
    }
    .button.disabled {
        opacity: 0.6;
        cursor: not-allowed;
        pointer-events: none;
    }
</style>

<script>
    window.target_language_code = "{{ target_language_code }}";
</script>
<script src="{{ url_for('static', filename='js/sourcedirs.js') }}"></script>
{% endblock content %} 