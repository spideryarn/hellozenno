{% extends "base.jinja" %}

{% block breadcrumbs %}
    » <a href="{{ url_for('views.languages') }}">Languages</a>
    » <a href="{{ url_for('sourcedir_views.sourcedirs_for_language', target_language_code=target_language_code) }}">{{ target_language_code }}</a>
    » <a href="{{ url_for('sentence_views.sentences_list', language_code=target_language_code) }}">Sentences</a>
    » {{ sentence.sentence }}
{% endblock breadcrumbs %}

{% block title %}
{{ sentence.sentence }} - {{ target_language_name }} sentence - Hello Zenno
{% endblock title %}

{% block content %}
<!-- Mount point for Svelte component -->
<div id="sentence-component"></div>

<script type="module">
  import { Sentence } from "{{ url_for('static', filename='build/js/sentence-entry.js') }}";
  
  // Initialize the Svelte component with data from the server
  new Sentence({
    target: document.getElementById('sentence-component'),
    props: {
      sentence: {{ sentence | tojson | safe }},
      metadata: {{ metadata | tojson | safe }},
      enhanced_sentence_text: {{ enhanced_sentence_text | tojson | safe }},
      target_language_code: "{{ target_language_code }}",
      target_language_name: "{{ target_language_name }}"
    }
  });
</script>
{% endblock content %} 