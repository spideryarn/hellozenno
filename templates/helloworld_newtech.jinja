{% extends "base.jinja" %}

{% block title %}
{{ page_title }} - Hello Zenno
{% endblock title %}

{% block head_imports %}
{{ super() }}
<!-- This will be replaced with Vite's development script or production build -->
<script type="module" src="/static/js/helloworld-entry.js" defer></script>
{% endblock head_imports %}

{% block content %}
<div class="container">
    <h1>{{ page_title }}</h1>
    
    <div class="demo-section">
