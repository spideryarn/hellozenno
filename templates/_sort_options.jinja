       class="sort-link {% if current_sort == 'date' %}active{% endif %}">
        Recently Modified
    </a>
    {% if show_commonality %}|
    <a href="{{ url_for('wordform_views.wordforms_list_vw', target_language_code=target_language_code, sort='commonality') }}"
       class="sort-link {% if current_sort == 'commonality' %}active{% endif %}">
        Most Common
    </a>
    {% endif %}
    {% elif 'phrase_views' in request.url_rule.endpoint %}
